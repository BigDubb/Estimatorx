<div class="row">
    <div class="col-md-4">
        <h4 style="margin-bottom: 10px">Linked External Logins</h4>
        <table class="table table-hover">
            <colgroup>
                <col style="width: 200px" />
                <col style="width: 100px" />
            </colgroup>
            <thead>
                <tr>
                    <th>Provider</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="login in viewModel.user.Logins">
                    <td>{{login.LoginProvider}}</td>
                    <td style="text-align: right">
                        <div class="btn-group pull-right">
                            <a class="btn btn-link btn-sm"
                               title="Remove linked login"
                               ng-click="viewModel.removeLogin(login.LoginProvider, login.ProviderKey)">
                                <i class="glyphicon glyphicon-remove"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-md-3" style="border-left: 1px solid #D5D5D5; padding: 0 20px">
        <h4 style="margin-bottom: 30px">Add an External Login</h4>
        @using (Html.BeginForm("LinkLogin", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()

            <button class="btn btn-block btn-social btn-google-plus" type="submit" name="provider" value="Google">
                <i class="fa fa-google-plus"></i> Sign in with Google
            </button>
            <button class="btn btn-block btn-social btn-microsoft" type="submit" name="provider" value="Microsoft">
                <i class="fa fa-windows"></i> Sign in with Microsoft
            </button>
            <button class="btn btn-block btn-social btn-github" type="submit" name="provider" value="GitHub">
                <i class="fa fa-github"></i> Sign in with GitHub
            </button>
            <button class="btn btn-block btn-social btn-facebook" type="submit" name="provider" value="Facebook">
                <i class="fa fa-facebook"></i> Sign in with Facebook
            </button>
            <button class="btn btn-block btn-social btn-twitter" type="submit" name="provider" value="Twitter">
                <i class="fa fa-twitter"></i> Sign in with Twitter
            </button>
        }
    </div>
</div>
