
@{
    ViewBag.Title = "Projects";
}

<div class="container" ng-controller="projectListController">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li class="active">Projects</li>
    </ol>
    <div class="panel panel-default">
        <div class="panel-heading">
            <i class="fa fa-list"></i> Projects
                
            <div class="btn-group pull-right hidden-xs">
                <a class="btn btn-sm btn-primary"
                   title="Create New Project"
                   href="~/Project/Create">
                    Create
                </a>
            </div>

            <div class="input-group input-group-sm col-sm-2 pull-right">
                <select class="form-control" title="Select Organization"
                        ng-change="viewModel.search();"
                        ng-model="viewModel.organizationId"
                        ng-options="item.Id as item.Name for item in viewModel.organizations">
                    <option value="">-- All --</option>
                </select>
            </div>

            <form name="searchForm" class="input-group input-group-sm col-sm-3 pull-right hidden-xs" 
                  ng-submit="viewModel.search()">
                <input type="text" class="form-control" placeholder="Search" 
                       ng-model="viewModel.searchText"/>
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </form>
        </div>
        <div class="panel-body">
            @Html.Partial("_List")
        </div>
    </div>
</div>
